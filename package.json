{
  "name": "portalmedia-monorepo",
  "version": "1.0.0",
  "description": "Portal Media - Full Stack Web Application with PayPal Integration",
  "private": true,
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "npm run dev",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "rimraf frontend/dist frontend/node_modules backend/node_modules node_modules",
    "setup": "npm run install:all"
  },
  "keywords": [
    "react",
    "express",
    "paypal",
    "fullstack",
    "typescript",
    "monorepo"
  ],
  "author": "Portal Media",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}